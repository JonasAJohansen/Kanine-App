generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  userId    String
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId])
}

model Book {
  id           Int           @id @default(autoincrement())
  title        String
  pages        Int
  userId       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  notes        Note[]
  starredPages StarredPage[]
  pageFiles    PageFile[]
  category     Category?     @relation(fields: [categoryId], references: [id])
  categoryId   Int?

  @@index([userId])
  @@index([categoryId])
}

model PageFile {
  id          Int     @id @default(autoincrement())
  bookId      Int
  pageNumber  Int
  fileUrl     String?
  fileType    String
  fileName    String
  fileContent Bytes?
  book        Book    @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([bookId, pageNumber])
  @@index([bookId])
}

model StarredPage {
  id        Int      @id @default(autoincrement())
  bookId    Int
  page      Int
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([bookId, page])
  @@index([bookId])
}

model Note {
  id         Int      @id @default(autoincrement())
  userId     String
  bookId     Int
  content    String   @db.Text
  pageNumber Int
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  tags       Tag[]

  @@index([userId])
  @@index([bookId])
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String
  userId    String
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId])
  @@index([userId])
}
