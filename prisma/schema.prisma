generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id           Int           @id @default(autoincrement())
  title        String
  pages        Int
  userId       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  notes        Note[]
  starredPages StarredPage[]
  pageFiles    PageFile[]
}

model PageFile {
  id         Int      @id @default(autoincrement())
  bookId     Int
  pageNumber Int
  fileUrl    String?
  fileType   String
  fileName   String
  fileContent Bytes?
  book       Book     @relation(fields: [bookId], references: [id])

  @@unique([bookId, pageNumber])
}

model StarredPage {
  id     Int  @id @default(autoincrement())
  bookId Int
  page   Int
  book   Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([bookId, page])
}

model Note {
  id         Int      @id @default(autoincrement())
  userId     String
  bookId     Int
  content    String   @db.Text
  pageNumber Int
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  tags       Tag[]
}

model Tag {
  id     Int    @id @default(autoincrement())
  name   String
  userId String
  notes  Note[]

  @@unique([name, userId])
}